{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es2015",
      "sourceMap": true,
      "jsx": "react",
      "allowJs": true,
      "experimentalDecorators": true,
      "noEmitOnError": true,
      "typeRoots":  ["./node_modules/@types", "./custom_typings"],
    },

    "include": [
        "./src/*",
        "./src/**/*",
        "./src/**/**/*",
    ],
}